<?xml version="1.0" encoding="utf-8"?>
<question xmlns="http://www.gradians.com">
  <statement>
    <tex>
    \text{Find }\frac{dy}{dx}\text{ given that }\\
    \qquad 2x + 3y = \sin x
    </tex>
  </statement>
  <step>
    <context>
  		\text{Is the following analysis correct?}
  		</context>
    <tex correct="true">
  		\begin{align}
  		  2x + 3y &amp;= \sin x \\
  		  \implies y &amp;= \dfrac{\sin x-2x}{3} \\
  		  \implies\dfrac{dy}{dx} &amp;= \dfrac{1}{3}\cdot (\cos x - 2)
  		\end{align}
  		</tex>
    <reason>
  		\text{Collect all terms with y on side}\\
  		\text{and all terms with x on the other.}\\
  		\text{Then differentiate with respect to x.}
  		</reason>
  </step>
  <choices>
    <tex correct="true">\frac{dy}{dx}=\frac{\cos x - 2}{3}</tex>
    <tex>\frac{dy}{dx}=\frac{3}{\cos x - 2}</tex>
    <tex>\frac{dy}{dx}=\frac{-\cos x - 2}{3}</tex>
    <tex>\frac{dy}{dx}=\frac{3}{-\cos x - 2}</tex>
  </choices>
</question>
