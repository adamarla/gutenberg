%% Control the size of math in \begin{align} on a case by case basis 
\newbool{smallmath}
\setbool{smallmath}{false} 
\newcommand\smallmath{\setbool{smallmath}{true}} 

\newcounter{index}
\newcommand\svg{}

\newcommand\newcard[1][true]{
  \stepcounter{index}
  \renewcommand\svg{tex-\theindex.svg}

  \ifbool{#1}{
    \addtostream{xml}{ <tex isImage="true">img_\svg </tex> }
  }{
    \addtostream{xml}{ <tex isImage="true" correct="false">img_\svg </tex> }
  }

  \ifbool{preview}{
    \textcolor{red}{\newline img\_\svg \newline} 
  }{ 
    \newpage
  } 
} 

\newcommand\statement{
  \addtostream{xml}{ <statement> }
  \newcard
  \addtostream{xml}{ </statement> }
} 

\newcommand\reason{
  \addtostream{xml}{ <reason> }
  \newcard
  \addtostream{xml}{ </reason> }
} 

\newcommand\correct{ \newcard }
\newcommand\incorrect{ \newcard[false] }

