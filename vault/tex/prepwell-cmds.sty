% Generic 
\newcommand\xaxis{$x-$axis }
\newcommand\yaxis{$y-$axis }
\newcommand\zaxis{$z-$axis }

% Chapter: Probability 

\newcommand\condp[2]{ P\left(#1\,\vert\,#2\right) }
\newcommand\fcondp[2]{ \frac{\condp{#2}{#1}\cdot P\left(#1\right)}{P\left(#2\right)} }

% Calculus 

\newcommand\dydx{\frac{dy}{dx}}
\newcommand\doublediff{\frac{d^2 y}{dx^2}}
\newcommand\ddx{\frac{d}{dx}}

% Inverse Trigonometry 

\newcommand\sini[1]{\sin^{-1}\left( #1\right)}
\newcommand\cosi[1]{\cos^{-1}\left( #1\right)}
\newcommand\tani[1]{\tan^{-1}\left( #1\right)}
\newcommand\csci[1]{\csc^{-1}\left( #1\right)}
\newcommand\seci[1]{\sec^{-1}\left( #1\right)}
\newcommand\coti[1]{\cot^{-1}\left( #1\right)}
