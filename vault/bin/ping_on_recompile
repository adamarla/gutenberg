#!/bin/bash 

if [[ $1 ]] ; then 
  case $1 in 
    -r) server=http://www.gradians.com ;;
    *) server=http://localhost:3000 ;;
  esac 
else 
  server=http://localhost:3000
fi 

path=$(pwd | rev | cut -d'/' -f1-3 | rev)
cid=$(grep -oP 'chapterId="\K[^"]*' source.xml)

if [ -z "$cid" ] ; then 
  ping="$server/sku/recompiled?path=$path"
else 
  ping="$server/sku/recompiled?path=$path&c=$cid"
fi 

# Mark as recompiled 
curl $ping

# Now, tag underlying asset with any skills set in source.xml 
ids=$(grep "<skill " source.xml | sed -e 's/.*"\(.*\)".*/\1/g')
second_ping="$server/sku/set_skills?path=$path&skills='$ids'"
curl $second_ping 
